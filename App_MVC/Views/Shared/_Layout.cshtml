<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - App_MVC</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/App_MVC.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/style.css">
</head>

<body>
	<div class="d-flex" id="wrapper">
		<!-- Sidebar-->
		<div class="border-end bg-dark" id="sidebar-wrapper">
			<div class="sidebar-heading border-bottom border-dark text-bg-dark">Start Bootstrap</div>
			<div class="list-group list-group-flush">
				<a class="list-group-item list-group-item-action list-group-item-dark text-bg-dark p-3" asp-area=""
					asp-controller="Home" asp-action="Index">Home</a>
				<a class="list-group-item list-group-item-action list-group-item-dark text-bg-dark p-3" asp-area=""
					asp-controller="Home" asp-action="Privacy">Privacy</a>
				<a class="list-group-item list-group-item-action list-group-item-dark text-bg-dark p-3"
					href="#!">Overview</a>
				<a class="list-group-item list-group-item-action list-group-item-dark text-bg-dark p-3"
					href="#!">Events</a>
				<a class="list-group-item list-group-item-action list-group-item-dark text-bg-dark p-3"
					href="#!">Profile</a>
				<a class="list-group-item list-group-item-action list-group-item-dark text-bg-dark p-3"
					href="#!">Status</a>
			</div>
		</div>
		<!-- Page content wrapper-->
		<div id="page-content-wrapper">
			<!-- Top navigation-->
			<nav class="navbar navbar-expand-lg vw-100 navbar-light bg-light border-bottom">
				<div class="container-fluid">
					<button class="btn" id="sidebarToggle" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
				</div>
			</nav>
			<!-- Page content-->
			<div class="container-fluid">
				<h1 class="mt-4">Simple Sidebar</h1>
				<main role="main" class="pb-3">
					@RenderBody()
				</main>
			</div>
		</div>
	</div>


	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2024 - App_MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>

</html>
